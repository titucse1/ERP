<!DOCTYPE html>
<html class="bg-black">
    <head>
        <meta charset="UTF-8">
        <title>OG ERP | Log in</title>
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
        <!-- bootstrap 3.0.2 -->
        <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" type="text/css">
        

        <!-- font Awesome -->
 
        <link href="@Url.Content("~/Content/css/font-awesome.min.css")" rel="stylesheet" type="text/css">
        <!-- Ionicons -->
        
        <link href="@Url.Content("~/Content/css/ionicons.min.css")" rel="stylesheet" type="text/css">
       
       
        <!-- Theme style -->
        <link href="@Url.Content("~/Content/css/AdminLTE.css")" rel="stylesheet" type="text/css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    
        <![endif]-->
               <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
        <!-- jQuery UI 1.10.3 -->
           <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

        <!-- AdminLTE App -->
       
         <script src="@Url.Content("~/Scripts/AdminLTE/app.js")"></script>

    </head>
    <body class="bg-blue">
    
        <div class="form-box" id="login-box">
            <div class="header">Login</div>
           @using (Html.BeginForm("", "Login/Index", FormMethod.Post, new { @id = "loginForm" }))
     { 
                <div class="body bg-gray">
                    <div class="form-group">
                        <input type="text" name="USER_NAME" required class="form-control" placeholder="User ID"/>
                    </div>
                    <div class="form-group">
                        <input type="password" name="USER_PWD" required  class="form-control" placeholder="Password"/>
                    </div>          
                    <div class="form-group">
                        <input type="checkbox" name="remember_me"/> Remember me
                    </div>
                </div>
                <div class="footer">                                                               
                    <button type="submit" class="btn bg-olive btn-block">Log Me In</button>  
                    
                    <p><a href="#">I forgot my password</a></p>
                   
                </div>
           
               }
            <div class="margin text-center">
                <span>Omicon Group</span>
               


            </div>
        </div>

             <!-- jQuery 2.0.2 -->
      

    </body>
</html>
