@{
    ViewBag.Title = "Users Add";
    Layout = "~/Views/shared/_content.cshtml"; 
}

<h2>Create User</h2>

<div class="row">
	<div id="breadcrumb" class="col-xs-12">
		<a href="#" class="show-sidebar">
			<i class="fa fa-bars"></i>
		</a>
		<ol class="breadcrumb pull-left">
			<li><a href="/brand/">Brand</a></li>
			<li><a href="/brand/add">Add Brand</a></li>
		</ol>
		<div id="social" class="pull-right">
			<a href="#"><i class="fa fa-google-plus"></i></a>
			<a href="#"><i class="fa fa-facebook"></i></a>
			<a href="#"><i class="fa fa-twitter"></i></a>
			<a href="#"><i class="fa fa-linkedin"></i></a>
			<a href="#"><i class="fa fa-youtube"></i></a>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-xs-12 col-sm-12">
        @using (Html.BeginForm("Add", "Brand", FormMethod.Post, new { @id = "addBrandForm" }))
        { 
		<div class="box">
			<div class="box-header">
				<div class="box-name">
					<i class="fa fa-search"></i>
					<span>Add Brand Name form</span>
				</div>
				<div class="box-icons">
					<a class="collapse-link">
						<i class="fa fa-chevron-up"></i>
					</a>
					<a class="expand-link">
						<i class="fa fa-expand"></i>
					</a>
					<a class="close-link">
						<i class="fa fa-times"></i>
					</a>
				</div>
				<div class="no-move"></div>
			</div>
			<div class="box-content">
				<h4 class="page-header">Add Brand Name form</h4>
				<form class="form-horizontal" role="form">
					<div class="form-group">
						<label class="col-sm-2 control-label">Brand Name</label>
						<div class="col-sm-4">
							<input type="text" class="form-control" name="BOOK_BRAND_NAME" placeholder="BOOK BRAND NAME" data-toggle="tooltip" data-placement="bottom" title="Tooltip for name">
						</div>
						<label class="col-sm-2 control-label">Brand Name Bangla</label>
						<div class="col-sm-4">
							<input type="text" class="form-control" name="BOOK_BRAND_NAME_B" placeholder="Brand Name Bangla" data-toggle="tooltip" data-placement="bottom" title="Tooltip for last name">
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Brand Code</label>
						<div class="col-sm-4">
							<input type="text" name="BOOK_BRAND_CODE" class="form-control" placeholder="Code">
						</div>
						
					</div>
					
			          <br />
						<div class="form-group">
						<label class="col-sm-2 control-label" for="form-styles">Brand Description</label>
						<div class="col-sm-10">
								<textarea class="form-control" rows="5" name="BOOK_BRAND_DESC" id="wysiwig_simple"></textarea>
						</div>
					</div>
					
					
					<div class="clearfix"></div>
					<div class="form-group">
						
						
						<div class="col-sm-2">
							<button type="button" onclick="sent_data('/Brand/add')" class="btn btn-primary btn-label-left">
							<span><i class="fa fa-clock-o"></i></span>
								Save
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
        }   
	</div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        WinMove();
    });
</script>




